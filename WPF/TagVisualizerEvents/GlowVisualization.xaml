<!-- A simple radial glow that can be activated and deactivated. -->
<s:TagVisualization
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="TagVisualizerEventsSample.GlowVisualization">
  <Ellipse x:Name="Glow" Width="120" Height="120" RenderTransformOrigin="0.5,0.5">
    <Ellipse.Fill>
      <RadialGradientBrush>
        <GradientStop Color="Red" Offset="0"/>
        <GradientStop Color="#00FF0000" Offset="1"/>
      </RadialGradientBrush>
    </Ellipse.Fill>
  </Ellipse>
</s:TagVisualization>