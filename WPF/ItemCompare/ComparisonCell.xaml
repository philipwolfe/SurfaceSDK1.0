<UserControl x:Class="ItemCompare.ComparisonCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">  
  <Border BorderThickness="0,0,0,1"
          HorizontalAlignment="Stretch"
          Width="Auto"
          Padding="0,0,0,5" BorderBrush="{StaticResource ComparisonCellBorderBrush}" >
    <Grid>
      <TextBlock x:Name="TextValue"
                 Style="{StaticResource BodyTextStyle}"
                 Visibility="Collapsed"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Stretch"
                 Text="SomePlaceHolderText" />
      <Image x:Name="ImageValue"
           Visibility="Collapsed"
           HorizontalAlignment="Left"
           VerticalAlignment="Stretch" />
      <Image x:Name="BooleanValue"
           Visibility="Collapsed"
           Stretch="None"
           HorizontalAlignment="Left"
           VerticalAlignment="Stretch" />
    </Grid>
  </Border>
</UserControl>
